<div class="container">

    <!-- header container -->
    <div class="header-container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>Free Range Burger Truck</h1>
                <h6>We relish the chance to meat you!</h6>
                <hr>
            </div>
            <div class="col-md-3"></div>
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <img id="foodtruckImg" src="/assets/img/foodTruck.gif">
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <!-- container where burgers will dynamically populate -->
    <div class="burger-container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="mt-3 text-center">Order Up!</h3>
                <hr>
                <ul>
                    {{#each burgers}} {{#unless devoured}}
                    <li class="individual-burger">{{ this.burger_name }}
                        <button class="btn btn-light eat-button" data-id="{{ this.id }}">Eat it</button>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h3 class="mt-3 text-center">Burgers Devoured</h3>
                <hr> {{#each burgers}} {{#if devoured}}
                <li class="individual-burger ml-5">{{ this.burger_name }} </li>
                {{/if}} {{/each}}
            </div>
        </div>

    </div>

    <!-- form container -->
    <div class="form-container">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8 center-element">
                <h2>Order a New Burger</h2>

                <div class="form-group">
                    <label for="burger_name">Order any type of burger you'd like! </label>
                    <input class="input-lg form-control" id="burger_input" type="text" name="burger">
                </div>

                <button id="submit-button">Add burger</button>
            </div>
            <div class="col-md-3"></div>

        </div>

    </div>

</div>